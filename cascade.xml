	<namespace path="src">Joomla\Plugin\RadicalMartFields\Cascade</namespace>
	<scriptfile>script.php</scriptfile>

	<!-- Language files -->
	<languages folder="language">
		<language tag="en-GB">en-GB/plg_radicalmart_fields_cascade.ini</language>
		<language tag="en-GB">en-GB/plg_radicalmart_fields_cascade.sys.ini</language>
		<language tag="ru-RU">ru-RU/plg_radicalmart_fields_cascade.ini</language>
		<language tag="ru-RU">ru-RU/plg_radicalmart_fields_cascade.sys.ini</language>
	</languages>

	<!-- Files -->
	<files>
		<folder>forms</folder>
		<folder>services</folder>
		<folder plugin="cascade">src</folder>
	</files>

	<!-- Layouts files -->
	<layouts destination="plugins/radicalmart_fields/cascade" folder="layouts">
		<folder>administrator</folder>
		<folder>display</folder>
		<folder>field</folder>
	</layouts>

	<!-- Media files -->
	<media destination="plg_radicalmart_fields_cascade" folder="media">
		<folder>js</folder>
	</media>

	<!-- Update server -->
	<updateservers>
		<server type="extension" priority="1" name="RadicalMart Fields: Cascade">
			https://sovmart.ru/update?element=plg_radicalmart_fields_cascade
